---
type Props = {
	name: string;
};

const { name } = Astro.props;
---

<div class="border bg-stone-900 border-stone-700 rounded-2xl flex flex-col">
  <div class="bg-stone-800 relative px-4 py-1.5 border-b border-stone-700 pointer-events-none select-none rounded-t-2xl">
    <div class="absolute left-3 top-1/2 -translate-y-1/2 flex gap-1.5">
      <div class="rounded-full size-3 border border-stone-600" />
      <div class="rounded-full size-3 border border-stone-600" />
      <div class="rounded-full size-3 border border-stone-600" />
    </div>

    <div class="min-w-80 px-4 border w-fit mx-auto text-center py-1 border-stone-700 rounded-full text-xs">
      <span>{name}</span>
    </div>
  </div>

  <div class="bg-stone-900 rounded-b-2xl flex-1 px-4 pt-4">
    <slot />
  </div>
</div>

